{
  "name": "capfullstack",
  "version": "1.0.0",
  "description": "Practice CAP",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/connectivity": "^3.23.0",
    "@sap-cloud-sdk/generator": "^3.23.0",
    "@sap-cloud-sdk/http-client": "^3.23.0",
    "@sap-cloud-sdk/resilience": "^3.23.0",
    "@sap-cloud-sdk/util": "^3.22.2",
    "@sap/cds": "^8",
    "@sap/low-code-event-handler": "^1.2.4",
    "@sap/mdk-tools": "^1.3.1",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^4.2.6",
    "express": "^4",
    "hdb": "^0.19.10",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/dev-cap-tools": "^1.31.0",
    "@types/node": "^22.0.0",
    "typescript": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch": "cds-ts w"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "app-service": {
        "impl": "@sap/low-code-event-handler"
      },
      "auth": {
        "[development]": {
          "kind": "dummy"
        },
        "[production]": {
          "kind": "xsuaa"
        }
      },
      "SalesOrderA2X": {
        "kind": "odata-v2",
        "model": "srv/external/SalesOrderA2X",
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "apihub_sandbox",
            "path": "s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      },
      "Northwind": {
        "kind": "odata",
        "model": "srv/external/northwind",
        "[development]": {
          "credentials": {
            "url": "https://services.odata.org/V4/Northwind/Northwind.svc"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "northwind",
            "url": "V4/Northwind/Northwind.svc"
          }
        }
      },
      "API_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_SALES_ORDER_SRV",
        "[development]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "apihub_sandbox",
            "path": "s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      }
    },
    "features": {
      "fetch_csrf": true
    }
  },
  "lcap": true,
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}